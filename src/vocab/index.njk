---
layout: layout.njk
title: Hebrew Vocabulary
pagination:
  data: vocab_1
  size: 10
  alias: words
permalink: "vocab/{{ pagination.pageNumber + 1 }}/index.html"
---

<h1 class="text-3xl font-bold mb-6">Hebrew Vocabulary</h1>
<ul class="space-y-4">
  {% for word in words %}
    <li class="p-4 bg-white rounded shadow">
      <div class="flex flex-col md:flex-row md:items-center md:space-x-4">
        <span class="text-2xl font-bold text-blue-700" dir="rtl">{{ word.hebrew_no_vowels }}</span>
        <span class="text-lg text-gray-700">{{ word.hebrew_vowels }}</span>
        <span class="italic text-gray-500">{{ word.transliteration }}</span>
        <span class="ml-2 text-gray-800">{{ word.definition }}</span>
      </div>
    </li>
  {% endfor %}
</ul>

<!-- Pagination Controls -->
<nav class="mt-8 flex justify-center space-x-2">
  {% if pagination.href.previous %}
    <a href="{{ pagination.href.previous | url }}" class="px-4 py-2 bg-blue-100 text-blue-700 rounded hover:bg-blue-200">Previous</a>
  {% endif %}
  {% for pageHref in pagination.hrefs %}
    {% set pageNum = loop.index %}
    {% if pagination.pageNumber == loop.index0 %}
      <span class="px-4 py-2 bg-blue-600 text-white rounded">{{ pageNum }}</span>
    {% else %}
      <a href="{{ pageHref | url }}" class="px-4 py-2 bg-gray-100 text-gray-700 rounded hover:bg-gray-200">{{ pageNum }}</a>
    {% endif %}
  {% endfor %}
  {% if pagination.href.next %}
    <a href="{{ pagination.href.next | url }}" class="px-4 py-2 bg-blue-100 text-blue-700 rounded hover:bg-blue-200">Next</a>
  {% endif %}
</nav>
